//
// This file used only for codacy, since actual linting takes place when the projects in /extension and /pagescript are run.
// Codacy is not smart enough to find the lint configs for those projects, so it's duplicated here.
//
// In other words, the contents of this file are NOT included in the build chain, and only as a concession to tooling.
// 

{
  "globals": {
    "$": true,
    "jQuery": true,
    "_": true,
    "lodash": true,
    "moment": true
  },
  "root": true,
  "env": {
    "node": true,
    "webextensions": true
  },
  "extends": [
    "plugin:vue/essential",
    "@vue/standard",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "parser": "babel-eslint"
  },
  "rules": {
    "semi": 0,
    "no-tabs": 0,
    "indent": 0,
    "eqeqeq": 0,
    "space-before-function-paren": 0,
    "no-unneeded-ternary": 0,
    "comma-dangle": 0,
    "no-trailing-spaces": 0,
    "operator-linebreak": 0,
    "no-multiple-empty-lines": 0,
    "no-eval": 0,
    "dot-notation": 0,
    "no-var": 0,
    "padded-blocks": 0,
    "func-call-spacing": 0,
    "vue/multi-word-component-names": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-this-alias": 0,
    "@typescript-eslint/camelcase": 0
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
