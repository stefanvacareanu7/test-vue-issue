{
  "name": "recital-frontend",
  "version": "1.0.0",
  "private": true,
  "config": {
    "//": "config for outlook addin debugging",
    "app_to_debug": "outlook",
    "app_type_to_debug": "desktop",
    "dev_server_port": 3000
  },
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore . --fix",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore --fix",
    "lint-staged:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore",
    "lint-staged:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style",
    "test": "jest",
    "addin:start": "office-addin-debugging start static/outlook-addin/dev-manifest.xml",
    "addin:start:desktop": "office-addin-debugging start static/outlook-addin/dev-manifest.xml desktop",
    "addin:start:web": "office-addin-debugging start static/outlook-addin/dev-manifest.xml web",
    "addin:stop": "office-addin-debugging stop static/outlook-addin/dev-manifest.xml",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:silent": "cypress run --spec \"**/*.features\"",
    "prepare": "husky install",
    "lint-staged": "yarn lint-staged:js && yarn lint-staged:style",
    "storybook": "nuxt storybook"
  },
  "dependencies": {
    "//": "v-tooltip v3 uses Vue 3",
    "@apollo/client": "*",
    "@nuxtjs/apollo": "recitalsoftware/apollo-module",
    "@nuxtjs/auth-next": ">= 5.0.0-1602966760.822bc05",
    "@nuxtjs/axios": "*",
    "@nuxtjs/dayjs": "*",
    "@nuxtjs/sentry": "*",
    "@nuxtjs/svg-sprite": "*",
    "@nuxtjs/toast": "*",
    "@rails/actioncable": "*",
    "@sentry/tracing": "*",
    "@tailwindcss/forms": "*",
    "@types/ahoy.js": "*",
    "ahoy.js": "*",
    "apollo-cache-inmemory": "*",
    "apollo-link-ws": "*",
    "apollo-utilities": "*",
    "core-js": "*",
    "graphql": "*",
    "graphql-ruby-client": "*",
    "line-awesome": "*",
    "lodash": "*",
    "nuxt": "*",
    "subscriptions-transport-ws": "*",
    "v-tooltip": "<3",
    "vue-clamp": "^0.4.0",
    "vue-infinite-loading": "*",
    "vue-typed-mixins": "*"
  },
  "devDependencies": {
    "//": "babel-core - vue-jest requires a peer dependency of babel-core@^6.25.0 so we add babel@core^7.0.0-bridge.0",
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@commitlint/cli": "*",
    "@commitlint/config-conventional": "*",
    "@nuxt/types": "*",
    "@nuxt/typescript-build": "*",
    "@nuxtjs/eslint-config": "*",
    "@nuxtjs/eslint-config-typescript": "*",
    "@nuxtjs/eslint-module": "*",
    "@nuxtjs/google-fonts": "*",
    "@nuxtjs/storybook": "*",
    "@nuxtjs/stylelint-module": "*",
    "@nuxtjs/tailwindcss": "*",
    "@types/jest": "*",
    "@types/lodash": "*",
    "@vue/cli-service": "*",
    "@vue/eslint-config-airbnb": "*",
    "@vue/eslint-config-prettier": "*",
    "@vue/eslint-config-typescript": "*",
    "@vue/test-utils": "*",
    "babel-core": "bridge",
    "babel-eslint": "*",
    "babel-jest": "*",
    "cypress": "*",
    "cypress-cucumber-preprocessor": "*",
    "devcert": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-import-resolver-alias": "*",
    "eslint-plugin-cypress": "*",
    "eslint-plugin-nuxt": "*",
    "eslint-plugin-prettier": "*",
    "eslint-plugin-sonarjs": "*",
    "eslint-plugin-storybook": "*",
    "eslint-plugin-vuejs-accessibility": "*",
    "husky": "*",
    "jest": "*",
    "jsdom-global": "*",
    "lint-staged": "*",
    "office-addin-debugging": "*",
    "postcss": "*",
    "postcss-html": "*",
    "prettier": "*",
    "prettier-plugin-tailwind": "*",
    "stylelint": "*",
    "stylelint-config-prettier": "*",
    "stylelint-config-standard": "*",
    "ts-jest": "*",
    "vue-jest": "*"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}